<!--pages/login/index.wxml-->
<view class="container">
  <view class="login">
    <view class="form-input">
      <van-icon name="friends-o" />
      <input type="text" model:value="{{stuId}}" placeholder="学号" />
    </view>
    <view class="form-input">
      <van-icon name="closed-eye" />
      <input type="password" model:value="{{password}}" placeholder="密码" />
    </view>
    <view>
      <van-checkbox value="{{ checked }}" shape="square" bind:change="onCheckboxChange">
        记住我
      </van-checkbox>
    </view>
    <view>
      <van-button round block="true" color="{{btnC}}" type="primary" bind:tap="login">登录</van-button>
      <van-divider contentPosition="center" bind:tap="loginWX">微信登陆</van-divider>
    </view>

  </view>
</view>